<h2>Editar dados do aluno</h2>
<p>Nome: {{aluno.name}}</p>

<form action="/alunos/saveedit" method="POST" class="form">
    <fieldset>
        <input type="hidden" name="id" value="{{aluno.id}}">
        <legend>novo aluno</legend>
        <label for="name">nome</label>
        <input type="text" name="name" placeholder="Digite o nome" value="{{aluno.name}}" required >
        <label for="age">idade</label>
        <input type="num" name="age" placeholder="Digite a idade" value="{{aluno.age}}" required>
         <label for="level">level</label>
        <input type="text" name="level" placeholder="Digite o nível" value="{{aluno.level}}" required >
          <label for="grade">série</label>
        <input type="num" name="grade" placeholder="Digite a série" value="{{aluno.grade}}" required>
        <label for="email">email</label>
        <input type="email" name="email" placeholder="Digite o email" value="{{aluno.email}}" required>
        <input type="submit" value="Alterar" class="add_btn">
    </fieldset>
</form>

