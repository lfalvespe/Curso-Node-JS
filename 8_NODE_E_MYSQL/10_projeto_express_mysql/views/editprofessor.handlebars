<h2>Editar dados do professor</h2>

<form action="/professores/saveedit" method="POST" class="form">
    <fieldset>
        <input type="hidden" name="id" value="{{professor.id}}">
        <legend>novo professor</legend>
        <label for="name">nome</label>
        <input type="text" name="name" placeholder="Digite nome" value="{{professor.name}}" required >
        <label for="disciplina">disciplina</label>
        <input type="text" name="disciplina" placeholder="Digite a disciplina" value="{{professor.disciplina}}" required>
        <label for="email">email</label>
        <input type="email" name="email" placeholder="Digite o email" value="{{professor.email}}" required>
        <input type="submit" value="Alterar" class="add_btn">
    </fieldset>
</form>