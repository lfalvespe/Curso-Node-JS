<h1>Usu√°rios cadastrados</h1>


<div class="container">
    {{#each users}}

    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details_btn">Ver detalhes</a>
            <a href="/users/edit/{{this.id}}" class="edit_btn">Editar</a>
            <form action="/users/delete/{{this.id}}" method="POST">
                <input type="submit" value="Excluir" class="delete_btn">
            </form>
        </div>
    </div>

    {{/each}}
</div>